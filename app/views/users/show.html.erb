


<div class="container">
<br>
<br>
<br>
<br>

<div class="row">
  <div class=" col-sm-6">
    <%= image_tag "admin.png", class:"img-circle my-img center-block"  %>
      <h1 class="middle1"> <%= @user.first_name %> <%= @user.last_name %> </h1>
      <h3 class="middle1"> <%= @user.job_title %> </h3><br>
        <button type="submit" class="btn btn-primary center-block btn-lg ">Edit your own skillset
        </button>
  </div>
<div class="col-sm-6"{
    background-color: #2C96A3;
}>

  <h1 class="middle1"> What's your project? </h1>

<%= form_for @project do |form| %>
  <div class="form-group">
    <div>
      <%= form.label :title, "Project Name" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div>
      <%= form.label :description, "Project Description" %>
      <%= form.text_area :description, class: "form-control", rows: "3"%>
    </div>
      <h1 class="middle1"> Choose skills needed for project</h1>

      <%= render partial: '/users/project_skills_form', object: form %>

    <br>
    <div>
      <%= form.submit @user.manager? ? "Build Squad" : "Submit for Approval", class: "btn btn-primary btn-lg btn-block" %>
    </div>
  </div>
<% end %>
</div>

<br>
<br>

<div class="row">
  <div class=" col-sm-6 ">
  </div>

<div class=" col-sm-6 user_blue">


<% if @user.staff? %>

<table>
    <div>
      <h1> Approved Projects </h1>
    </div>
    </div>
  <% @user.managed_projects.where(status: "approved").each do |project| %>
    <div class="pmd-card pmd-card-default pmd-z-depth">
        <div class="pmd-card-body">
            <h2>
              <%= link_to project.title, project_path(project) %>
            </h2>
      <% if project.users.empty? %>

        <%= link_to "Build Squad", project_path(project), class: "btn btn-primary" %>

      <% end %>
  <% end %>
    </div>
</table>
</br>

  <div>
    <h2> Pending Approval </h2>
  </div>
  <% @user.managed_projects.where(status: "awaiting_approval").each do |project| %>
    <div class="pmd-card pmd-card-default pmd-z-depth">
      <h2> <%= link_to project.title, project_path(project) %> </h2>
    </div>
  <% end %>

<% else %>

<table>

  <div>
    <h1> Projects Pending Your Approval </h1>
  </div>
  </div>
    <% Project.where(status: "awaiting_approval").each do |project| %>
      <% if project.project_owner.department == @user.department %>
          <div class="pmd-card pmd-card-default pmd-z-depth">
              <div class="pmd-card-body">
                <h2>
                    <%= link_to project.title, project_path(project) %>
                        <div><br>
                    <!-- <div style="display: inline; padding-right: 60px; float: 10px;"  > -->
                          <%= link_to "Approve", project_approve_path(project), class: "btn btn-primary"%>
                          <%= link_to "Refuse", project_refuse_path(project), class: "btn btn-primary" %>
                        </div>
                    </div>
                </h2>
              </div>
           </div>
      <% end %>
    <% end %>
  </table>

<table>
  <tr>
    <th> Projects You've Approved </th>
  </tr>
  <% Project.where(status: "approved", approved_or_refused_by_id: "#{@user.id}").each do |project| %>
    <tr>
      <td> <%= link_to project.title, project_path(project) %> </td>
    </tr>
  <% end %>
</table>

<% end %>



  <% end %>

  </div>
</div>
