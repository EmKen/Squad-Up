<%= form_for :session, url: session_path, html: { class:"form-inline" } do |form| %>
  <div  class="form-group" >
    <%= form.label :email, class: 'sr-only' %>
    <%= form.text_field :email, type: 'email', class:'form-control', placeholder: 'Email' %>
  </div>

  <div class="form-group">
    <%= form.label :password, class: 'sr-only' %>
    <%= form.password_field :password,  class:"form-control", placeholder: 'Password' %>
  </div>

  <%= form.submit 'Sign In', class:"btn btn-default"%>

  <div class="form-group">
    <%= button_to t(".forgot_password"), new_password_path, method: :get, class:"btn btn-default"  %>
  </div>
<% end %>
